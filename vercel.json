{
    "version": 2,
    "buildCommand": "bun run build",
    "devCommand": "bun run dev",
    "installCommand": "bun install",
    "framework": null,
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api"
        },
        {
            "source": "/(.*)",
            "destination": "/client/$1"
        }
    ],
    "functions": {
        "api/index.ts": {
            "memory": 1024,
            "maxDuration": 10
        }
    }
}