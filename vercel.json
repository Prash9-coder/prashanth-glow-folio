{
    "buildCommand": "cd client && npm install && npm run build",
    "outputDirectory": "client/dist",
    "installCommand": "npm install --prefix client",
    "framework": "vite",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://prashanth-glow-folio.onrender.com/api/:path*"
        }
    ],
    "env": {
        "VITE_API_URL": "https://prashanth-glow-folio.onrender.com"
    }
}